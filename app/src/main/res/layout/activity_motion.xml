<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_switch_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBkg"
    android:gravity="center"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.pluca.rpiapp.MotionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight=".70"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:textStyle="bold"
            android:text="Motion now: "/>
        <TextView
            android:id="@+id/motion_display"
            android:layout_weight=".30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:textStyle="bold"
            android:text="NO"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight=".70"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:textStyle="bold"
            android:text="Sound now : "/>
        <TextView
            android:id="@+id/sound_display"
            android:layout_weight=".30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:textStyle="bold"
            android:text="NO"/>
    </LinearLayout>

    <SeekBar
        android:id="@+id/sensor_position_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="130"
        android:minHeight="30dip"
        android:maxHeight="30dip"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Sensors position"/>

    <ImageView
        android:id="@+id/motion_stats"
        android:layout_weight=".30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="Surveillance mode"
        android:id="@+id/surveillance_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:gravity="center"
        android:background="@color/Button"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        />

</LinearLayout>
