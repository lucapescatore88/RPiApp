<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/mainBkg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pluca.rpiapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <TableRow android:id="@+id/main_row1"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_alignParentLeft="true"
        android:layout_width="fill_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/camera_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/camera"
            />
        <ImageView
            android:id="@+id/tree_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:src="@drawable/tree_off"
            />
    </TableRow>

    <TableRow android:id="@+id/main_row2"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_alignParentLeft="true"
        android:layout_width="fill_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/lcd_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/tree_off"
            />
        <ImageView
            android:id="@+id/motion_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:src="@drawable/tree_off"
            />
    </TableRow>

    <TableRow android:id="@+id/main_row3"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_alignParentLeft="true"
        android:layout_width="fill_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/potentiometer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/tree_off"
            />
        <ImageView
            android:id="@+id/rgb_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:src="@drawable/rgb_led"
            />
    </TableRow>

</TableLayout>
